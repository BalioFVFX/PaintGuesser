<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_player_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        style="@style/NormalText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Role: Painter"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_rival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        style="@style/SmallText"
        app:layout_constraintTop_toBottomOf="@id/tv_player_type"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        tools:text="Rival: Macbook pro"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        style="@style/SmallText"
        app:layout_constraintTop_toBottomOf="@id/tv_rival"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        tools:text="Guess: Apple"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        style="@style/NormalText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Rating: 4.5/5.0"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        style="@style/SmallText"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_rating"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Date: 04-09-2022"/>

</androidx.constraintlayout.widget.ConstraintLayout>